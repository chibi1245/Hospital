@{
    ViewData["Title"] = "Home Page - Hospital Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
     
        <div class="text-center mb-5">
            <h1 class="display-4">Welcome to our hospital managment system</h1>
            <p>Your health is our top priority. Explore our services and find the best care for you and your loved ones.</p>
        </div>

     
        @{
            var hour = DateTime.Now.Hour;
            string greeting = hour < 12 ? "Good Morning" : (hour < 18 ? "Good Afternoon" : "Good Evening");
        }
        <div class="alert alert-info text-center">
            <strong>@greeting!</strong> We're happy to have you here at our hospital managment system.
        </div>

        <!-- Call to Action -->
        <div class="text-center mb-5">
            <h3>Explore Our Services</h3>
            <p>We offer a wide range of healthcare services for patients of all ages.</p>
            <a class="btn btn-secondary" asp-area="admin" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <a class="btn btn-secondary" asp-area="admin" asp-controller="Hospitals" asp-action="Index">Hospital</a>
            <a class="btn btn-secondary" asp-area="admin" asp-controller="Rooms" asp-action="Index">Rooms</a>
            <a class="btn btn-secondary" asp-area="admin" asp-controller="Contacts" asp-action="Index">Contact</a>
        </div>

        <!-- Cards Section for Hospital Services -->
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card">
                   
                    <div class="card-body">
                        <h5 class="card-title">Emergency Services</h5>
                        <p class="card-text">Available 24/7 to handle all emergency medical needs. We are here for you in critical situations.</p>
                        <a href="/emergency" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    
                    <div class="card-body">
                        <h5 class="card-title">Outpatient Services</h5>
                        <p class="card-text">Visit our outpatient departments for consultation and diagnostic services. We care for your health.</p>
                        <a class="btn btn-primary" asp-area="admin" asp-controller="Rooms" asp-action="Index">Book an Room</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    
                    <div class="card-body">
                        <h5 class="card-title">Inpatient Care</h5>
                        <p class="card-text">Our hospital provides exceptional inpatient care with fully equipped rooms and professional medical staff.</p>
                        <a href="/inpatient" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Testimonials Section -->
        <div class="text-center mb-5">
            <h3>What Our Patients Say</h3>
            <p>Here are some testimonials from our happy patients:</p>
            <div class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <p class="fs-4">"I received excellent care from the team here. The doctors were amazing and made me feel comfortable every step of the way."</p>
                        <footer class="blockquote-footer">Patient John Doe</footer>
                    </div>
                    <div class="carousel-item">
                        <p class="fs-4">"The hospital staff was very supportive, and I was able to get the care I needed quickly. I highly recommend this hospital."</p>
                        <footer class="blockquote-footer">Patient Jane Smith</footer>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target=".carousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target=".carousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

        <!-- Footer -->
        <footer class="text-center mt-5">
            <p>. All rights reserved. | <a href="/privacy">Privacy Policy</a></p>
        </footer>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
